{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./package",
    "strict": true,
    "module": "commonjs",
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
